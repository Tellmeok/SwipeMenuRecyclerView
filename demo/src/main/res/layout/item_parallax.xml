<?xml version="1.0" encoding="utf-8"?>
<com.aitsuki.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:autoClose="true"
    app:designer="@string/parallax_designer"
    app:preview="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/left_1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="L1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/left_2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/orange500"
            android:gravity="center"
            android:text="L2"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/left_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/red500"
            android:gravity="center"
            android:text="L3"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/right_1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="R1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right_2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/orange500"
            android:gravity="center"
            android:text="R2"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/red500"
            android:gravity="center"
            android:text="R3"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:text="Parallax"
        android:textSize="18sp" />

</com.aitsuki.swipe.SwipeLayout>